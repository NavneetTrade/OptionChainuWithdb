# Nginx reverse proxy configuration
# For Oracle Cloud / VPS deployment
# Location: /etc/nginx/sites-available/option-chain

server {
    listen 80;
    server_name your-domain.com;  # Replace with your domain or VM IP

    # Streamlit WebSocket support
    location / {
        proxy_pass http://localhost:8502;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts for long-running requests
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
    }
    
    # Static files
    location /_stcore/static {
        proxy_pass http://localhost:8502/_stcore/static;
    }
}

